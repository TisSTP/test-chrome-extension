{
    "manifest_version": 2,

    "name": "Getting started example",
    "description": "This extension shows a Google Image search result for the current page",
    "version": "1.1",

    "browser_action": {

        "default_icon": "images/icons8-google_docs.png",
        "default_title": "Extension", // title icon extension
        "default_popup": "popup.html" // .html
    },

    "permissions": [
        "notifications"
    ],

    "background": {
        "scripts": ["background-test1.js"]
    },

    // crbug.com/134315
    "web_accessible_resources": [
        "images/icons8-google_docs.png"
    ]
}